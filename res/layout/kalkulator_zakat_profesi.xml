<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zakat_zakatProfesi_scrollwrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/zakat_zakatProfesi_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="org.lazisba.sizakat.KalkulatorZakatProfesi" >

        <TextView
            android:id="@+id/zakat_zakatProfesi_lbl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color_sectheader"
            android:drawableLeft="@drawable/icon_report_32"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/app_zakat_profesi_lbl_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/zakat_zakatProfesi_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_gaji" />

            <EditText
                android:id="@+id/zakat_zakatProfesi_txt_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/zakat_txtbox_nisabfinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_bonus"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/zakat_zakatProfesi_txt_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_hasiltahun"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_txt_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/app_str_numbnul_rp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_keluarbln"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/zakat_zakatProfesi_txt_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_keluarlain"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/zakat_zakatProfesi_txt_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_profesi_lbl_kenazakat"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_txt_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/app_str_numbnul_rp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_lbl_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/app_zakat_lbl_item_i"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/zakat_zakatProfesi_txt_finalzakat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/app_str_numbnul_rp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zakat_zakatProfesi_btn_ok"
                style="@style/siz_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/siz_button_style"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
